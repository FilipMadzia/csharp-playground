<Window x:Class="wpf_introduction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_introduction"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Współczynnik a" />
            <TextBox x:Name="wspA" Text="1"></TextBox>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="Współczynnik b" />
            <TextBox x:Name="wspB" Text="1"></TextBox>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="Współczynnik c" />
            <TextBox x:Name="wspC" Text="1"></TextBox>
        </StackPanel>
        
        <Button Click="ButtonBase_OnClick" Content="Licz"></Button>
        
        <Label x:Name="result"></Label>
    </StackPanel>
</Window>

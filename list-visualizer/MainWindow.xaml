<Window x:Class="list_visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:list_visualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
		<Canvas x:Name="Canvas" Width="700" Height="400" />
		<StackPanel Orientation="Horizontal">
			<Button Content="Restart" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="10" Click="RestartButtonOnClick"/>
			<Button Content="BubbleSort" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="10" Click="BubbleSortButtonOnClick"/>
		</StackPanel>
	</Grid>
</Window>

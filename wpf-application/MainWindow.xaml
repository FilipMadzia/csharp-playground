<Window x:Class="wpf_application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_application"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>            
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Label x:Name="ResultLbl" Content="0" FontSize="40" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" />
        
        <Button Grid.Row="2" Grid.Column="0" Click="AddNumber">1</Button>
        <Button Grid.Row="2" Grid.Column="1" Click="AddNumber">2</Button>
        <Button Grid.Row="2" Grid.Column="2" Click="AddNumber">3</Button>
        <Button Grid.Row="3" Grid.Column="0" Click="AddNumber">4</Button>
        <Button Grid.Row="3" Grid.Column="1" Click="AddNumber">5</Button>
        <Button Grid.Row="3" Grid.Column="2" Click="AddNumber">6</Button>
        <Button Grid.Row="4" Grid.Column="0" Click="AddNumber">7</Button>
        <Button Grid.Row="4" Grid.Column="1" Click="AddNumber">8</Button>
        <Button Grid.Row="4" Grid.Column="2" Click="AddNumber">9</Button>
        <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Click="AddNumber">0</Button>
        
        <Button Grid.Row="2" Grid.Column="3" Click="ClearButtonClick">C</Button>
        
        <Button Grid.Row="3" Grid.RowSpan="3" Grid.Column="3">=</Button>
        
        <Button Grid.Row="1" Grid.Column="0">+</Button>
        <Button Grid.Row="1" Grid.Column="1">-</Button>
        <Button Grid.Row="1" Grid.Column="2">*</Button>
        <Button Grid.Row="1" Grid.Column="3">/</Button>
    </Grid>
</Window>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dijkstra_algorithm.MainPage">

	<VerticalStackLayout Padding="20" Spacing="10">
		<Label Text="Enter Distances Between Vertices" FontSize="20" HorizontalOptions="Center" />

		<Entry x:Name="ABEntry" Placeholder="Distance A -> B" Keyboard="Numeric" />
		<Entry x:Name="ACEntry" Placeholder="Distance A -> C" Keyboard="Numeric" />
		<Entry x:Name="BCEntry" Placeholder="Distance B -> C" Keyboard="Numeric" />

		<Button Text="Calculate Shortest Path" Clicked="OnCalculateShortestPathClicked" />

		<Label x:Name="ResultLabel" Text="Result will appear here..." FontSize="16" TextColor="Blue" />
	</VerticalStackLayout>

</ContentPage>
